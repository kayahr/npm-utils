{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/npm-utils",
    "version": "1.1.1",
    "type": "module",
    "description": "Cross-platform dependency-free CLI utilities for use in package.json scripts",
    "keywords": [
        "cli",
        "npm",
        "utils",
        "tools",
        "utilities",
        "dependency-free",
        "no-dependencies",
        "del",
        "delete",
        "glob",
        "recursive",
        "remove",
        "rimraf",
        "rm",
        "rmdir",
        "cp",
        "copy",
        "run",
        "parallel",
        "sequential"
    ],
    "license": "MIT",
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kayahr/npm-utils.git"
    },
    "homepage": "https://github.com/kayahr/npm-utils",
    "bugs": "https://github.com/kayahr/npm-utils/issues",
    "funding": "https://github.com/kayahr/npm-utils?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": [],
    "bin": {
        "cp": "lib/main/cp.js",
        "rm": "lib/main/rm.js",
        "run": "lib/main/run.js"
    },
    "engines": {
        "node": ">=22.18.0"
    },
    "devEngines": {
        "runtime": {
            "name": "node",
            "version": ">=22.18.0",
            "onFail": "error"
        },
        "packageManager": {
            "name": "npm",
            "version": ">=11",
            "onFail": "error"
        }
    },
    "scripts": {
        "clean": "rm -rf lib",
        "build": "run build:*",
        "build:compile": "tsc",
        "test": "run test:*",
        "test:unit": "ntest",
        "test:lint": "oxlint --type-aware --deny-warnings",
        "test:cspell": "cspell --color --no-progress",
        "prepare": "run clean build"
    },
    "devDependencies": {
        "@kayahr/assert": "1.4.0",
        "@kayahr/cspell": "9.3.2-bundle.1",
        "@kayahr/npm-utils": "1.1.1",
        "@kayahr/ntest": "1.3.0",
        "@kayahr/oxlint-config": "1.14.2",
        "@types/node": "25.0.3",
        "typescript": "5.9.3"
    }
}
